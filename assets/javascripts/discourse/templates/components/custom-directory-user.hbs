<div class="user-image">
  <div class="user-image-inner">
    <a href="{{unbound userPath}}" data-user-card="{{unbound user.username}}">{{avatar user imageSize="large"}}</a>
    {{#if user.primary_group_name}}
      {{avatar-flair
        flairURL=user.primary_group_flair_url
        flairBgColor=user.primary_group_flair_bg_color
        flairColor=user.primary_group_flair_color
        groupName=user.primary_group_name}}
    {{/if}}
  </div>
</div>

<a class="user-detail" href="{{unbound userPath}}">
  <div class='name-line'>
    <span class="username">{{format-username user.username}}</span>
    <span class="name">{{unbound user.name}}</span>
   </div>
   <div class="title">{{unbound user.title}}</div>
</a>
